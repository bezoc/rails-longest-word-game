<div class="container mt-5">
  <h1 class="mb-3">New game</h1>
  <div>
    <% @letters.each do |letter| %>
      <span class="badge bg-primary fs-4 p-3 m-1"><%= letter %></span>
    <% end %>
  </div>
  <form action="/score" method="POST" data-turbo="false" class="mt-3">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join(' ') %>
    <div class="mb-3">
      <label for="word" class="form-label">What is the longest word you can find?</label>
      <input type="text" class="form-control" id="word" name="word" required>
    </div>
    <button type="submit" class="btn btn-success">Play</button>
  </form>
</div>
